<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:clickable="false">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SettingsButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@android:drawable/ic_menu_preferences"
        android:clickable="true"
        android:adjustViewBounds="false"
        android:background="?android:attr/selectableItemBackground"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SearchButton"
        android:layout_alignBottom="@+id/SettingsButton"
        android:src="@android:drawable/ic_menu_search"
        android:cropToPadding="false"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RecButtonOn"
        android:clickable="false"
        android:layout_centerInParent="true"
        android:src="@drawable/button_mic_on"
        android:background="?android:attr/selectableItemBackground"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RecButtonOff"
        android:clickable="false"
        android:layout_centerInParent="true"
        android:src="@drawable/button_mic_off"
        android:background="?android:attr/selectableItemBackground"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RecButtonDisabled"
        android:clickable="false"
        android:layout_centerInParent="true"
        android:src="@drawable/button_mic_disabled"
        android:background="?android:attr/selectableItemBackground"/>

</RelativeLayout>
